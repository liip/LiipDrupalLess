  $hooks['form_system_theme_settings_alter'] = array(
    'group' => 'theme',
  );
  
  $hooks['wysiwyg_editor_settings_alter'] = array(
    'group' => 'wysiwyg',
  );
  $hooks['form_wysiwyg_profile_form_alter'] = array(
    'group' => 'wysiwyg',
  );
  
  $hooks['cron_queue_info'] = array(
    'group' => 'cron',
  );
  $hooks['cron'] = array(
    'group' => 'cron',
  );
  
  return $hooks;
}

